# Configurações de ambiente para produção
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database - PostgreSQL (Neon)
# Recommended for most uses
DATABASE_URL=postgres://username:password@host-pooler.region.aws.neon.tech/database?sslmode=require

# For uses requiring a connection without pgbouncer
DATABASE_URL_UNPOOLED=postgresql://username:password@host.region.aws.neon.tech/database?sslmode=require

# Parameters for constructing your own connection string
PGHOST=your-host-pooler.region.aws.neon.tech
PGHOST_UNPOOLED=your-host.region.aws.neon.tech
PGUSER=your-username
PGDATABASE=your-database
PGPASSWORD=your-password

# Parameters for Vercel Postgres Templates
POSTGRES_URL=postgres://username:password@host-pooler.region.aws.neon.tech/database?sslmode=require
POSTGRES_URL_NON_POOLING=postgres://username:password@host.region.aws.neon.tech/database?sslmode=require
POSTGRES_USER=your-username
POSTGRES_HOST=your-host-pooler.region.aws.neon.tech
POSTGRES_PASSWORD=your-password
POSTGRES_DATABASE=your-database
POSTGRES_URL_NO_SSL=postgres://username:password@host-pooler.region.aws.neon.tech/database
POSTGRES_PRISMA_URL=postgres://username:password@host-pooler.region.aws.neon.tech/database?connect_timeout=15&sslmode=require

# Neon Auth environment variables for Next.js
NEXT_PUBLIC_STACK_PROJECT_ID=your-project-id
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=your-publishable-key
STACK_SECRET_SERVER_KEY=your-secret-key

# Debug mode (False para produção)
DEBUG=False

# Frontend URL para CORS
FRONTEND_URL=https://your-domain.vercel.app

# OpenAI API Configuration (for credit card statement categorization)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini