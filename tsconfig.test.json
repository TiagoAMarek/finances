{
  "extends": "./tsconfig.json",
  "include": [
    "tests/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "__tests__/**/*",
    "vitest.config.ts",
    "vitest.config.components.ts"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    // Specific configurations for tests
    "types": [
      "vitest/globals",
      "node",
      "@types/better-sqlite3",
      "@testing-library/jest-dom"
    ],
    // Allow more flexible types in tests
    "strict": true,
    "noImplicitAny": true
  }
}
